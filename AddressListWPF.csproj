  </ItemGroup>

  <ItemGroup>
    <Reference Include="AddressList.Shared">
      <HintPath>..\AddressList.Shared\bin\Debug\net8.0\AddressList.Shared.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
